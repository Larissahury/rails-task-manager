<h3><%= @task.title %></h3>
<h3><%= @task.details %></h3>
<% if @task.completed %>
  <h3>This task is completed</h3>
<% else %>
  <h3>This task is not completed yet</h3>
<% end %>

<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task),
method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Back to list", index_path %>
